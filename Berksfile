cookbook "apt", github: "opscode-cookbooks/apt", tag: "v2.3.8"
cookbook "nodejs", github: "mdxp/nodejs-cookbook", tag: "1.3.0"
cookbook "wordpress", github: "brint/wordpress-cookbook", tag: "v2.1.3"